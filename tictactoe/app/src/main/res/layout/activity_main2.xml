<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".MainActivity2">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="@dimen/_275sdp"
        android:layout_height="@dimen/_275sdp"
        android:layout_marginStart="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:background="@drawable/container"
        android:padding="@dimen/_35sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65999997">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/but1_1"
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_69sdp"
                android:layout_weight="1"
                android:background="@drawable/borders_1" />

            <ImageButton
                android:id="@+id/but1_2"
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_69sdp"
                android:layout_weight="1"
                android:background="@drawable/borders_1" />

            <ImageButton
                android:id="@+id/but1_3"
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_69sdp"
                android:layout_weight="1"
                android:background="@drawable/borders_2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/but2_1"
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_69sdp"
                android:layout_weight="1"
                android:background="@drawable/borders_1" />

            <ImageButton
                android:id="@+id/but2_2"
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_69sdp"
                android:layout_weight="1"
                android:background="@drawable/borders_1" />

            <ImageButton
                android:id="@+id/but2_3"
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_69sdp"
                android:layout_weight="1"
                android:background="@drawable/borders_2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/but3_1"
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_69sdp"
                android:layout_weight="1"
                android:background="@drawable/borders_3" />

            <ImageButton
                android:id="@+id/but3_2"
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_69sdp"
                android:layout_weight="1"
                android:background="@drawable/borders_3" />

            <ImageButton
                android:id="@+id/but3_3"
                android:layout_width="@dimen/_69sdp"
                android:layout_height="@dimen/_69sdp"
                android:layout_weight="1"
                android:background="@drawable/container" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_35sdp"
        android:text="@string/player1"
        android:textColor="@color/white"
        android:textSize="@dimen/_27ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/timer"
        android:gravity="center"
        android:text="0:00"
        android:textColor="@color/black"
        android:textSize="@dimen/_29ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:adSize="BANNER"

        app:adUnitId="ca-app-pub-4212526406301899/7583834489"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>